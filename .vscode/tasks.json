{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build tank game",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "*.c",                           // compile all source files
        "external/toml-c/toml.c",
        "-Iexternal/toml-c",
        // "-Iexternal/raylib/src",
        // "-Lexternal/raylib/build/raylib",
        "-o",
        "tankgame",
        "-lraylib",
        "-lpaho-mqtt3c",
        "-lm",
        "-ldl",
        "-lpthread",
        "-lGL",
        "-lX11"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
